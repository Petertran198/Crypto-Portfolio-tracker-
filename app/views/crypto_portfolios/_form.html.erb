<div class="col-md-7 m-auto">
    <%= form_with(model: crypto_portfolio, local: true) do |form| %>
      <% if crypto_portfolio.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(crypto_portfolio.errors.count, "error") %> prohibited this crypto_portfolio from being saved:</h2>

          <ul>
          <% crypto_portfolio.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= form.label :symbol %>
        <%= form.text_field :symbol , class: "form-control"%>
      </div>
      <div class="form-group">
           <%= form.number_field :user_id, value: current_user.id, type: "hidden" %> <!-- value: allow for the empty field to already show the id  of current_user which is provided by devise-->
          
      </div>
      <div class="form-group">
        <%= form.label :cost_per %>
        <%= form.text_field :cost_per, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :amount_owned %>
        <%= form.text_field :amount_owned, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.submit "Submit", class: "btn btn-outline-primary" %>
      </div>
  <% end %>

  <%= link_to 'Back', crypto_portfolios_path ,class: "text-center text-secondary" %>
</div>
