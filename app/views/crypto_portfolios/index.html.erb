
<h1>Crypto Portfolios</h1>

<table>
  <thead>
    <tr>
      <th>Symbol</th>
      <th>User</th>
      <th>Cost per</th>
      <th>Amount owned</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @crypto_portfolios.each do |crypto_portfolio| %>
      <% if crypto_portfolio.user.id == current_user.id %>
        <tr>
          <td><%= crypto_portfolio.symbol %></td>
          <td><%= crypto_portfolio.user_id %></td>
          <td><%= crypto_portfolio.cost_per %></td>
          <td><%= crypto_portfolio.amount_owned %></td>
          <td><%= link_to 'Show', crypto_portfolio %></td>
          <td><%= link_to 'Edit', edit_crypto_portfolio_path(crypto_portfolio) %></td>
          <td><%= link_to 'Destroy', crypto_portfolio, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>

      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Crypto Portfolio', new_crypto_portfolio_path %>
